@model MVC.Models.Auth.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card border-0 shadow-lg" style="border-radius: 20px">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Login</h2>
                    @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, new { @class = "control-label ms-2" })
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control rounded-pill", placeholder = "Email" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, new { @class = "control-label ms-2" })
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control rounded-pill", placeholder = "Password" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                @Html.CheckBoxFor(model => model.RememberMe, new { @class = "form-check-input" })
                                @Html.LabelFor(model => model.RememberMe, new { @class = "form-check-label" })
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block rounded-pill">Login</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>