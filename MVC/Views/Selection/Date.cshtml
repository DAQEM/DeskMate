@using MVC.Models.Partial
@model DateSelectorModel
@{
    ViewBag.Title = "Date selection";
    Layout = "_Layout";
}

@using (Html.BeginForm("Date", "Selection", FormMethod.Post, new { id = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ReservationType, new { id = "ReservationType", value = "Individual" })
    @Html.HiddenFor(model => model.Date, new { id = "Date", value = Model.Date })
    @Html.HiddenFor(model => model.TimeFrom, new { id = "TimeFrom", value = Model.TimeFrom })
    @Html.HiddenFor(model => model.TimeTo, new { id = "TimeTo", value = Model.TimeTo })

    @await Html.PartialAsync("Partial/Components/_DateSelectorPartial", Model)

    <div class="d-flex justify-content-center flex-wrap my-5">
        @await Html.PartialAsync("Partial/Components/_TimeSelectorPartial", new TimeSelectorModel
               {
                   DateSelectorModel = Model,
                   Type = "From"
               })
        @await Html.PartialAsync("Partial/Components/_TimeSelectorPartial", new TimeSelectorModel
               {
                   DateSelectorModel = Model,
                   Type = "To"
               })
    </div>

    <div class="d-flex justify-content-center my-2">
        <button type="button" class="btn btn-danger mx-3" style="width: 150px">Cancel</button>
        <button type="button" class="btn btn-primary mx-3" style="width: 200px"
                onclick="{
                    document.getElementById('ReservationType').value = 'Group';
                    document.getElementById('form').submit();
                }">
            Group reservation
        </button>
        <button type="button" class="btn btn-success mx-3" style="width: 150px"
                onclick="{
                    document.getElementById('ReservationType').value = 'Individual';
                    document.getElementById('form').submit();
                }">
            Next
        </button>
    </div>
}