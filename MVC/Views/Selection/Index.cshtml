@model SelectionModel

@{
    ViewBag.Title = "Selection";
    Layout = "_Layout";
}

<h1>Workspace reservation</h1>

<hr class="my-5"/>

@using (Html.BeginForm("Selection", "Selection", FormMethod.Post, new { id = "form" }))
{
    @await Html.PartialAsync("Partial/DateTimeSelection", Model)
    <hr class="my-5"/>
    @await Html.PartialAsync("Partial/EmployeeSelection", Model)
    <hr class="my-5"/>
    @await Html.PartialAsync("Partial/WorkspaceSelection", Model)

    <button type="submit" class="btn btn-primary w-100"> Submit </button>
}